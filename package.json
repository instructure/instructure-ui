{
  "name": "instructure-ui",
  "description": "UI libraries made by Instructure Inc.",
  "private": true,
  "version": "4.6.0",
  "author": "Instructure, Inc. Engineering and Product Design",
  "repository": {
    "type": "git",
    "url": "https://github.com/instructure/instructure-ui.git"
  },
  "homepage": "https://instructure.github.io/instructure-ui/",
  "bugs": "https://github.com/instructure/instructure-ui/issues",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prestart": "yarn bootstrap",
    "start": "lerna run start --stream",
    "start:watch": "lerna run start:watch --stream",
    "pretest": "yarn bootstrap",
    "test": "npm-run-all lint:commit lint test:packages",
    "test:packages": "lerna run test --parallel --stream",
    "test:packages:mocha": "NODE_RUNTIME=true lerna run test:mocha --parallel --stream",
    "test:watch": "lerna run test:watch --stream",
    "lint": "lerna run lint --parallel --stream",
    "lint:fix": "lerna run lint:fix",
    "lint:commit": "rm -f .git/validate-commit-msg && git log -1 --pretty=%B > .git/validate-commit-msg && validate-commit-msg validate-commit-msg",
    "generate:component": "./scripts/generate-component",
    "generate:package": "./scripts/generate-package",
    "commit": "git-cz",
    "bootstrap": "npm-run-all clean:modules bootstrap:packages clean build",
    "bootstrap:packages": "lerna bootstrap",
    "build": "lerna run build --stream --parallel --ignore __docs__",
    "build:watch": "lerna run build:watch --stream --parallel --ignore __docs__",
    "build:docs": "lerna run build --scope __docs__",
    "clean": "lerna run clean",
    "clean:modules": "lerna clean --yes",
    "bump": "./scripts/bump",
    "release": "./scripts/release",
    "predeploy": "yarn build:docs",
    "deploy": "lerna run deploy"
  },
  "license": "MIT",
  "devDependencies": {
    "@instructure/conventional-changelog": "1.0.0",
    "commitizen": "2.9.6",
    "lerna": "2.5.1",
    "npm-run-all": "4.1.1",
    "standard-version": "4.2.0",
    "validate-commit-msg": "2.14.0",
    "yarn": "1.3.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@instructure/conventional-changelog"
    }
  },
  "engines": {
    "yarn": ">=1.1.0"
  },
  "standard-version": {
    "skip": {
      "tag": true,
      "commit": true
    }
  }
}
