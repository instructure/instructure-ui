{
  "name": "instructure-ui",
  "description": "A design system by Instructure Inc.",
  "private": true,
  "version": "8.9.1",
  "author": "Instructure, Inc. Engineering and Product Design",
  "repository": {
    "type": "git",
    "url": "https://github.com/instructure/instructure-ui.git"
  },
  "homepage": "https://instructure.design",
  "bugs": "https://github.com/instructure/instructure-ui/issues",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "prestart": "yarn bootstrap",
    "start": "yarn workspace docs-app run start",
    "start-watch": "yarn workspace docs-app run start-watch",
    "dev": "yarn start-watch",
    "test-patchset": "npm-run-all lint-commit lint-changes test-jest test",
    "pretest-merge": "yarn bootstrap && yarn check",
    "test-merge": "npm-run-all lint-commit lint test",
    "test-all": "npm-run-all test-jest test",
    "test-watch": "ui-test --watch --no-headless",
    "test-changes": "ui-test --changed",
    "test": "ui-test",
    "test-jest": "yarn workspaces foreach -tv run test-jest",
    "lint": "yarn workspaces foreach -v --jobs 3 run lint",
    "lint-changes": "yarn lint --since HEAD^",
    "lint-fix": "yarn workspaces foreach -v --jobs 3 run lint-fix",
    "lint-commit": "ui-scripts --lint-commit",
    "lint-staged": "lint-staged",
    "update-package-list": "yarn workspace @instructure/instui-config run generate-package-list",
    "commit-package-list": "git add packages/instui-config/**/package-list.json",
    "generate-component": "instui create component",
    "generate-package": "instui create package",
    "commit": "ui-scripts --commit",
    "bootstrap": "npm-run-all clean-modules clean build build-tokens build-ts-types",
    "bootstrap-docs": "npm-run-all clean-modules clean build",
    "build": "yarn workspaces foreach --topological-dev --verbose run build",
    "build-watch": "yarn workspaces foreach --topological-dev --verbose run build-watch",
    "build-docs": "yarn workspace docs-app run bundle",
    "build-ts-types": "yarn workspaces foreach -tv run build-ts-types",
    "build-tokens": "ui-token-scripts generate-all-tokens",
    "build-ts": "yarn build && yarn build-ts-types",
    "build-node-scripts": "yarn workspaces foreach -tRv --from @instructure/ui-scripts run build",
    "clean": "yarn workspaces foreach run clean",
    "clean-modules": "yarn cache clean --all",
    "export-icons": "yarn workspace @instructure/ui-icons run export",
    "bump": "ui-scripts --bump",
    "release": "ui-scripts --publish",
    "dev-examples": "yarn workspace docs-examples run start-watch",
    "prestart-examples": "yarn bootstrap",
    "start-examples": "yarn workspace docs-examples run start",
    "generate-sketch": "yarn workspace docs-examples run generate-sketch",
    "husky-pre-commit": "npm-run-all update-package-list commit-package-list lint-staged",
    "husky:pre-push": "yarn lint-commit",
    "build-storybook": "yarn workspace docs-examples run bundle",
    "prepare": "husky install",
    "ts-check": "yarn workspaces foreach -tv run ts-check",
    "postinstall": "yarn build-node-scripts && husky install"
  },
  "license": "MIT",
  "resolutions": {
    "react": "^17.0.0",
    "react-dom": "^17.0.0"
  },
  "devDependencies": {
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7",
    "husky": "^7",
    "lerna": "^4",
    "lint-staged": "^10",
    "netlify-cli": "^4.0.1",
    "npm-run-all": "^4.1.5",
    "ts-migrate": "^0.1.16",
    "typescript": "4.2.4"
  },
  "engines": {
    "node": ">=12.20"
  },
  "config": {
    "ui-scripts": {
      "slack_emoji": ":instui:",
      "slack_channel": "#instui",
      "jira_host": "instructure.atlassian.net",
      "jira_project_id": "17900",
      "jira_project_key": "INSTUI",
      "npm_scope": "@instructure:registry=https://registry.npmjs.org/",
      "gh_pages_branch": "gh-pages",
      "gh_pages_dir": "packages/__docs__/__build__",
      "gh_pages_cname": "instructure.design",
      "changelog_url": "https://instructure.design/#CHANGELOG"
    },
    "commitizen": {
      "path": "./node_modules/@instructure/cz-lerna-changelog"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint",
      "prettier --write"
    ],
    "*.css": [
      "stylelint"
    ],
    "*.{json,jsx,md,mdx,html}": [
      "prettier --write"
    ]
  },
  "browserslist": [
    "extends @instructure/browserslist-config-instui"
  ]
}
